{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules"]
}
